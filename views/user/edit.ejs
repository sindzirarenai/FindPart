
<form method="POST" action="/user/manager/edit/save/" class="forms" id="edit-form" style="display:none">
      <fieldset style="margin:0">
        <legend>Редактирование пользователя</legend>
        <label for="username">
          <mark class="error" style="display:none" id="user"></mark>
          Логин: <input type="text" id="username" name="username" class="width-100"></input>
        </label>
        <input type="button" onclick="document.getElementById('passwordEdit').style.display='block'"value="Изменить пароль"></input>
        <div id="passwordEdit" style="display:none">
          <label for="password">
            <mark class="error" style="display:none" id="password"></mark>
            Введите новый пароль:<input type="password" name="password" class="width-100"></input>
          </label>
          <label for="passwordRepeat">
            <mark class="error" style="display:none" id="passwordRepeat"></mark>
            Повторите новый пароль:<input type="password" name="passwordRepeat" class="width-100"></input>
          </label>
        </div>
        <label for="role">
          Роль:
          <br><input type="radio" name="role" value="admin" id="admin"> Администратор
          <br><input type="radio" name="role" value="user" id="user"> Оператор       
        </label>
        <input type="submit" id='edit-button' class="btn btn-blue" value="Сохранить">
        <input type="reset"class="btn btn-blue" value="Отмена" onclick="document.getElementById('edit-form').style.display='none'; document.getElementById('passwordEdit').style.display='none';">
      </fieldset>
  </form> 